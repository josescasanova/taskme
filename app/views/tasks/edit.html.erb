<%= form_for [current_user, @task] do |f| %>
  <p>Title:</p>                       <%= f.text_field :title, label: "Title" %>
  <p>Description:</p>                  <%= f.text_field :description, label: "Description" %> <br />
  <p>Category:</p>                    <%= f.text_field :category, label: "Category" %>
  <p>Budget:</p>                    <%= f.number_field :budget, label: "Budget" %>
  <%= f.submit 'Update' %>
<% end %>
