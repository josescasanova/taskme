<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="page-header">
        <h1>Tasks</h1>
      </div>
      <% if user_signed_in? %>
      <b><a href="<%= new_user_task_path(current_user) %>">Create a new task</a><br /><br /></b>
      <% end %>
        <% @tasks.each do |task| %>
          <b><a href="<%= user_task_path(current_user, task) %>"><%= task.title %></a></b><br />
          <% if user_signed_in? %>
            <% if task.customer_id == @current_user.id %>
              <a href="<%= edit_user_task_path(current_user, task) %>">Edit Task</a><br /><br />
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


